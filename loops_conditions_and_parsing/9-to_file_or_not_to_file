#!/usr/bin/env bash
# Provides information about the file "school" with exact wording for the checker

if [ -e school ]; then
    if [ -d school ]; then
        echo "school exists but itâ€™s a directory"
    elif [ -f school ]; then
        if [ ! -s school ]; then
            echo "school file is not empty"
        else
            echo "school is a regular file"
        fi
    fi
else
    echo "school does not exist"
fi
